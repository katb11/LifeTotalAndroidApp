<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="LifeCounter.MainMenuActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quick_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bungee"
            android:text="@string/quick_start"
            android:textAlignment="center"
            android:textColor="#34376a" />

        <Button
            android:id="@+id/host_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#5B5D83"
            android:text="Host MtG Standard Game" />

        <Button
            android:id="@+id/host_commander_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#5B5D83"
            android:text="Host MtG Commander Game" />

        <Button
            android:id="@+id/join_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#5B5D83"
            android:text="Join Game" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bungee"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textColor="#34376a" />

        <TextView
            android:id="@+id/coming_soon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/coming_soon" />

    </LinearLayout>

</FrameLayout>