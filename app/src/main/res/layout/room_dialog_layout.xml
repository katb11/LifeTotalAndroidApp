<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"       android:background="#ffffff">

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="Enter Room ID" android:id="@+id/roomEdit" android:textColor="#000000"
        android:lines="1" />

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center" android:layout_height="wrap_content"
        android:hint="Enter Password" android:id="@+id/passwordEdit" android:textColor="#000000"
        android:lines="1"
        android:visibility="invisible"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button android:id="@+id/ok" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:text="Join Room"  android:layout_weight="1"
            />
        <Button android:id="@+id/cancel" android:layout_height="wrap_content"
            android:layout_width="wrap_content"  android:layout_weight="1"
            android:text="@android:string/cancel" />
    </LinearLayout>
</LinearLayout>